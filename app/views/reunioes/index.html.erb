<h1>Reuniões</h1>

<hr/>
<%= render 'formbusca' %>
<hr/>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Descricao</th>
      <th>Data</th>
      <th>Coordenador</th>
      <th>Gerência</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reunioes.each do |reuniao| %>
      <tr>
        <td><%= reuniao.codigo %></td>
        <td><%= reuniao.descricao %></td>
        <td><%= reuniao.data %></td>
        <td><%= reuniao.coordreuniao.nome %></td>
        <td><%= reuniao.gerencia.sigla %></td>
        <td></td>
        <td ><%= link_to 'Abrir Reunião', reuniao, :class => "glyphicon glyphicon-file"%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Reuniao', new_reuniao_path, :class => "btn btn-default"%> <br>
<%= will_paginate @reunioes, previous_label: "Anterior", next_label: "Próxima" %><br/><br>

