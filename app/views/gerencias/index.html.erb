<p id="notice"><%= notice %></p>

<h1>Gerências</h1>

<table>
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gerencias.each do |gerencia| %>
      <tr>
        <td><%= gerencia.sigla %></td>
        <td><%= gerencia.descricao %></td>
        <td><%= link_to 'Visualizar',gerencia, :class => "glyphicon glyphicon-file" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Gerência', new_gerencia_path, :class => "btn btn-default" %><br><br>

